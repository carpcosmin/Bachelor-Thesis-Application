<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AplicatieLicenta.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.AplicatieLicenta.PopupOverlay" >

            <Button
                android:id="@+id/btnAddOffer"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="250dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="3dp"
                android:text="Add"
                android:width="250dp"
                android:height="60dp"
                android:background="@drawable/custom_button"
                android:drawableLeft="@drawable/baseline_add_24_purple"
                android:textAllCaps="false"
                android:textColor="#8F1EFF"
                android:textSize="13dp"
                app:backgroundTint="@null">
            </Button>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>